<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="presenter"
            type="com.rdc.android_test_app_b.picture.PicturePresenter" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".picture.PictureActivity">

        <ImageView
            android:id="@+id/imageViewOut"
            android:layout_width="381dp"
            android:layout_height="444dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@android:color/background_light" />

        <Button
            android:id="@+id/b_del_link"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t_hint_del_link"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-89dp"
            android:text="@string/b_del_link"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/t_hint_del_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="89dp"
            android:text="@string/hint_ldel_link"
            android:textColor="@android:color/holo_red_light"
            android:textSize="18sp"
            android:visibility="invisible" />

    </RelativeLayout>
</layout>